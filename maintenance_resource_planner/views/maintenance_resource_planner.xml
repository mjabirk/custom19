<odoo>
	<data>


        <record id="maintenance_request_view_form_inherit_hr" model="ir.ui.view">
            <field name="name">maintenance.request.view.form.inherit.hr</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <div class="oe_button_box" style="display: flex; justify-content: center; width: 100%;">
                        <field name="picking_ids" invisible="1"/>
                        <button type="object"
                            name="action_view_delivery"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="delivery_count == 0"
                            groups="base.group_user">
                            <field name="delivery_count" widget="statinfo" string="Store Issue"/>
                        </button>
                        <field name="purchase_ids" invisible="1"/>
                        <button type="object"
                            name="action_view_purchase"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="purchase_count == 0"
                            groups="base.group_user">
                            <field name="purchase_count" widget="statinfo" string="Purchase Orders"/>
                        </button>
                        <field name="expense_ids" invisible="1"/>
                        <button type="object"
                            name="action_view_expense"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="expense_count == 0"
                            groups="base.group_user">
                            <field name="expense_count" widget="statinfo" string="Expenses"/>
                        </button>
                    </div>
                </xpath>
                <xpath expr="//button[@name='reset_equipment_request']" position="after">
                    <button name="create_picking" string="Create Orders" type="object" class="btn-primary"/>
                    <button name="create_expense" string="Create Expenses" type="object" class="btn-primary"/>
                </xpath>
				<xpath expr="//field[@name='name']" position="before">
					<field name="reference" />
				</xpath>
				<xpath expr="//field[@name='email_cc']" position="after">
					<field name="warehouse_id" />
				</xpath>
                <xpath expr="//page[1]" position="after">
                    <page string="Consumables">
                        <field
                                name="product_line_ids"
                                widget="section_and_note_one2many"
                                mode="list,kanban"
                            >
                                <form>
                                    <group>
                                        <group >
                                            <field name="product_id"  widget="many2one_barcode" />
                                            <field name="product_uom_qty"/>
                                            <field  name="product_uom"  />
                                            <field name="price_unit"/>
                                            <field name="procure_method" />
                                            <field name="partner_id"  />
                                            <field name="price_subtotal" invisible="1"/>
                                        </group>
                                    </group>
                                    <field name="name"/>
                                </form>
                                <list string="Product Lines" editable="bottom">
                                    <field name="product_id"  force_save="1"   widget="product_configurator"/>
                                    <field name="name" widget="section_and_note_text" />
                                    <field name="product_uom_qty"/>
                                    <field name="product_qty_ordered"/>
                                    <field  name="product_uom" force_save="1"  string="UoM" groups="uom.group_uom" options='{"no_open": True}' />
                                    <field name="procure_method" />
                                    <field name="partner_id"  />
                                    <field name="price_unit" />
                                    <field name="price_subtotal" widget="monetary" />
                                    <field name="company_id" invisible="1"/>
                                </list>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                        <field name="total_cost" />
                                </group>
                                <div class="oe_clear"/>
                            </group>
                    </page>
                </xpath>
            </field>
        </record>


		<record id="hr_equipment_request_view_tree_inherit" model="ir.ui.view">
			<field name="name">maintenance.request.tree.inherit</field>
			<field name="model">maintenance.request</field>
			<field name="inherit_id" ref="maintenance.hr_equipment_request_view_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="before">
					<field name="reference" />
				</xpath>
				<xpath expr="//field[@name='company_id']" position="after">
					<field name="total_cost" />
				</xpath>
			</field>
		</record>

    </data>
</odoo>

