<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_consumption_analysis">
        <t t-call="web.html_container">
        <t t-call="web.internal_layout">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div class="text-center">
	                <h2>Consumption Comparison</h2>
	                <p>
	                    From <u><span t-field="o.start_date"/></u> To <u><span t-field="o.end_date"/></u>
	                </p>
                </div>
                <table class="table table-sm">
                    <thead>
                        <tr style="border-top: 1px solid black">
                            <th>Product Code</th>
                            <th>BOM Consumption</th>
                            <th>Alkon Consumption</th>
                            <th class="text-right">Difference</th>

                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="get_data" t-as="datum">
                            <tr>
                                <td><span t-esc="datum['code']"/></td>
                                <td class="text-right"><span t-esc="datum['bom']"/></td>
                                <td class="text-right"><span t-esc="datum['alkon']"/></td>
                                <td class="text-right"><span t-esc="datum['diff']"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                    </tfoot>
                </table>
            </div>
        </t>
        </t>
        </t>
    </template>
</odoo>
