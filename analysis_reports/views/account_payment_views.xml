<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="guarantee_account_payment_form" model="ir.ui.view">
            <field name="name">guarantee.account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_method_line_id']" position="after">
                    <field name="guarantee_check" invisible="partner_type != 'customer'" readonly="state != 'draft'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
