<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Skipcash Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'skipcash'"
                       name="skipcash_credentials">
                    <field name="skipcash_key_id"
                           required="code == 'skipcash' and state != 'disabled'"/>
                    <field name="skipcash_webhook_key"
                           required="code == 'skipcash' and state != 'disabled'"/>

                    <field name="skipcash_client_id"
                           required="code == 'skipcash' and state != 'disabled'"/>
                    <field name="skipcash_secret"
                           required="code == 'skipcash' and state != 'disabled'"
                           password="True"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
