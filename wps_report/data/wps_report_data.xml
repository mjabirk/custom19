<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Scheduled Action to run payroll automation every day -->
    <record id="ir_cron_payroll_automation" model="ir.cron">
        <field name="name">Payroll Automation Daily</field>
        <field name="model_id" ref="model_payroll_automation"/>
        <field name="state">code</field>
        <field name="code">model.action_trigger_payroll()</field>
        <field name="active">True</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="user_id" ref="base.user_root"/> <!-- You can also set this to a specific user if needed -->
    </record>
</odoo>
