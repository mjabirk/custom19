<odoo>
	<data>
		<record id="fleet_vehicle_log_services_view_form_inherit" model="ir.ui.view">
			<field name="name">fleet.vehicle.log.services.form.inherit</field>
			<field name="model">fleet.vehicle.log.services</field>
			<field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_form"/>
			<field name="arch" type="xml">
                 <xpath expr="//widget[@name='web_ribbon']" position="before">
                    <div class="oe_button_box" name="button_box">
                        <field name="picking_ids" invisible="1"/>
                        <button type="object"
                            name="action_view_delivery"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="delivery_count == 0"
                            groups="base.group_user">
                            <field name="delivery_count" widget="statinfo" string="Spare-parts Issue"/>
                        </button>
                        <field name="purchase_ids" invisible="1"/>
                        <button type="object"
                            name="action_view_purchase"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="purchase_count == 0"
                            groups="base.group_user">
                            <field name="purchase_count" widget="statinfo" string="Purchase Orders"/>
                        </button>
                        <field name="move_ids" invisible="1"/>
                        <button type="object"
                            name="action_view_moves"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="move_count == 0"
                            groups="base.group_user">
                            <field name="move_count" widget="statinfo" string="Journal Entries"/>
                        </button>



                        <field name="expense_ids" invisible="1"/>
                        <button type="object"
                            name="action_view_expense"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="expense_count == 0"
                            groups="base.group_user">
                            <field name="expense_count" widget="statinfo" string="Expenses"/>
                        </button>



                    </div>
                </xpath>
				<xpath expr="//field[@name='state']" position="before">
                    <button name="create_picking" string="Create Orders" type="object" class="btn-primary"/>
<!--                    <button name="create_journal" string="Create Journal Entry" type="object" class="btn-primary"/>-->
                    <button name="create_expense" string="Create Expenses" type="object" class="btn-primary"/>
				</xpath>
				<xpath expr="//field[@name='description']" position="before">
					<field name="name" />
				</xpath>
				<xpath expr="//field[@name='purchaser_id']" position="after">
					<field name="warehouse_id" />
                    <field name="company_id" invisible="1"/>
				</xpath>
				<xpath expr="//sheet/group" position="after">
                    <notebook>
                        <page string="Product Lines" name="product_lines">
                            <field
                                name="product_line_ids"
                                widget="section_and_note_one2many"
                                mode="list,kanban"
                                readonly="state in ['done','cancelled']"
                            >
                                <form>
                                    <group>
                                        <group >
                                            <field name="product_id"  widget="many2one_barcode" />
                                            <field name="product_uom_qty"/>
                                            <field  name="product_uom"  />
                                            <field name="price_unit"/>
                                            <field name="procure_method" />
                                            <field name="partner_id"  />
                                            <field name="price_subtotal" invisible="1"/>
                                        </group>
                                    </group>
                                    <field name="name"/>
                                    <field name="company_id" invisible="1"/>
                                </form>
                                <list string="Product Lines" editable="bottom">
                                    <field name="product_id"  force_save="1"   widget="product_configurator"/>
                                    <field name="name" widget="section_and_note_text" />
                                    <field name="product_uom_qty"/>
                                    <field name="product_qty_ordered"/>
                                    <field  name="product_uom" force_save="1"  string="UoM" groups="uom.group_uom" options='{"no_open": True}' />
                                    <field name="procure_method" />
                                    <field name="partner_id"  />
                                    <field name="price_unit" />
                                    <field name="price_subtotal" widget="monetary" />
                                    <field name="company_id" invisible="1"/>
                                </list>
<!--                                <kanban class="o_kanban_mobile">-->
<!--                                    <templates>-->
<!--                                        <t t-name="kanban-box">-->
<!--                                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">-->
<!--                                                <div class="row">-->
<!--                                                    <div class="col-6">-->
<!--                                                        <field name="product_id"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="col-6">-->
<!--                                                        <field name="name"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="col-6">-->
<!--                                                        <field name="product_uom_qty"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="col-6">-->
<!--                                                        <field name="procure_method"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="col-6">-->
<!--                                                        <field name="partner_id"/>-->
<!--                                                    </div>-->
<!--                                                    <div class="col-6">-->
<!--                                                        <field name="price_unit"/>-->
<!--                                                    </div>-->
<!--                                                </div>-->
<!--                                            </div>-->
<!--                                        </t>-->
<!--                                    </templates>-->
<!--                                </kanban>-->
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                        <field name="total_cost" />
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </page>
                    </notebook>
			    </xpath>
			</field>
		</record>

		<record id="fleet_vehicle_log_services_view_tree_inherit" model="ir.ui.view">
			<field name="name">fleet.vehicle.log.services.tree.inherit</field>
			<field name="model">fleet.vehicle.log.services</field>
			<field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='date']" position="before">
					<field name="name" />
				</xpath>
				<xpath expr="//field[@name='amount']" position="after">
					<field name="total_cost" />
				</xpath>
			</field>
		</record>



    </data>
</odoo>

