<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_emp_productivity_analysis" model="ir.ui.view">
            <field name="name">Employee Productivity Analysis</field>
            <field name="model">employee.productivity.analysis</field>
            <field name="arch" type="xml">
            <form string="Employee Productivity Analysis">
                <span class="o_form_label">This wizard will print report which displays employees productivity for a specified dates.</span>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
                <group>
                    <field name="productivity_type"/>
                    <field name="previous_month"/>
                </group>
            </form>
            </field>
        </record>

        <record id="action_emp_productivity_analysis" model="ir.actions.act_window">
            <field name="name">Employee Productivity Analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.productivity.analysis</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            name="Productivity Analysis"
            parent="hr.hr_menu_hr_reports"
            sequence="200"
            action="action_emp_productivity_analysis"
            id="menu_emp_productivity_analysis"
           />
</odoo>
