<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Calendar View -->
    <record id="payroll_resource_calendar_view_att_form" model="ir.ui.view">
        <field name="name">payroll.resource.calendar.view.att.form</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='working_hours']" position="after">

                <page string="Attendance Configuration" name="attendance_config">
                    <group>

                        <field name="free_timing" />
                        <field name="allowed_late_time" widget="float_time" invisible="free_timing == True" />
                        <field name="allowed_leave_early_time" widget="float_time" invisible="free_timing == True" />
                        <field name="in_beginning_time" widget="float_time" invisible="free_timing == True" />
                        <field name="in_ending_time" widget="float_time" invisible="free_timing == True"/>
                        <field name="out_beginning_time" widget="float_time" invisible="free_timing == True"/>
                        <field name="out_ending_time" widget="float_time" invisible="free_timing == True" />
                        <field name="update_work_entry" />
<!--                        <field name="allow_overtime"  attrs="{'invisible': [('update_work_entry', '=', False)]}"/>-->
<!--                        <field name="consider_overtime" widget="float_time"  attrs="{'invisible': ['|',('update_work_entry', '=', False),('allow_overtime','=',False)]}"/>-->
                    </group>
                </page>

            </xpath>
        </field>
    </record>
</odoo>
