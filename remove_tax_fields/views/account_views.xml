<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Invoice/Bill List View to hide tax-related columns -->
        <record id="view_invoice_tree_inherit_remove_tax" model="ir.ui.view">
            <field name="name">account.invoice.tree.inherit.remove.tax</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_untaxed_in_currency_signed']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='amount_tax_signed']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit Invoice/Bill Form View -->
        <record id="view_move_form_inherit_remove_tax" model="ir.ui.view">
            <field name="name">account.move.form.inherit.remove.tax</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Hide the tax column in the invoice lines -->
                <xpath expr="//field[@name='invoice_line_ids']//list//field[@name='tax_ids']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>

                <!-- Replace the tax totals widget with a simple total/residual -->
                <xpath expr="//field[@name='tax_totals']" position="replace">
                     <field name="amount_total" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </xpath>

                 <!-- Hide Fiscal Position in the "Other Info" tab -->
                <xpath expr="//field[@name='fiscal_position_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit Journal Items List View to hide tax columns -->
        <record id="view_move_line_tree_inherit_remove_tax" model="ir.ui.view">
            <field name="name">account.move.line.tree.inherit.remove.tax</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tax_ids']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
                 <xpath expr="//field[@name='tax_tag_ids']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_line_id']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit Journal Item Form View to hide the tax group -->
        <record id="view_move_line_form_inherit_remove_tax" model="ir.ui.view">
            <field name="name">account.move.line.form.inherit.remove.tax</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[field[@name='tax_line_id']]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

