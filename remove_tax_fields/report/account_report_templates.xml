<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document_inherit_remove_tax" inherit_id="account.report_invoice_document">
        <!-- Hide Taxes column header in PDF -->
        <xpath expr="//th[@name='th_taxes']" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
        <!-- Hide Taxes value in line items in PDF -->
        <xpath expr="//td[@name='td_taxes']" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
        <!-- Hide Tax Totals section in PDF -->
        <xpath expr="//div[@id='total']//table" position="replace">
            <table class="table table-sm">
                <tr class="border-black o_total">
                    <td><strong>Total</strong></td>
                    <td class="text-end">
                        <span t-field="o.amount_total"/>
                    </td>
                </tr>
            </table>
        </xpath>
    </template>

</odoo>
