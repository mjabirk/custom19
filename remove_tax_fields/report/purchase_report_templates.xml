<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_inherit_no_taxes" inherit_id="purchase.report_purchaseorder_document">

        <xpath expr="//th[@name='th_taxes']" position="replace">
        </xpath>

        <xpath expr="//span[contains(@t-out, 'tax.tax_label')]/parent::td" position="replace">
        </xpath>

        <xpath expr="//t[@t-call='purchase.document_tax_totals']" position="replace">
            <tr class="border-black o_total">
                <td><strong>Total</strong></td>
                <td class="text-end">
                    <span t-field="o.amount_total"
                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                </td>
            </tr>
        </xpath>

    </template>
</odoo>

