<?xml version='1.0' encoding='utf-8'?>
<odoo noupdate="1">

    <record model="ir.rule" id="customer_evaluation_line_rule">
      <field name="name">Customer Evaluation Line multi-company</field>
      <field name="model_id" ref="model_customer_evaluation_lines"/>
      <field name="domain_force"> ['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
    </record>

    <record id="calculate_evaluation_cron" model="ir.cron">
        <field name="name">Customer Evaluation Calculation</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="state">code</field>
        <field name="code">model.compute_evaluation_lines()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="doall" eval="False"/>
    </record>
  </odoo>
